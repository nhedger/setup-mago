{
	"name": "setup-mago",
	"description": "Setup the Mago CLI in GitHub Actions",
	"module": "src/index.ts",
	"type": "module",
	"scripts": {
		"tag": "bun run scripts/tag-github-action.ts",
		"build": "bun build . --outfile dist/index.mjs --target node --minify",
		"check": "biome check --write",
		"typecheck": "tsc --noEmit",
		"ci": "biome ci"
	},
	"keywords": ["mago", "php", "cli", "github-action"],
	"author": {
		"name": "Nicolas Hedger",
		"email": "nicolas@hedger.ch"
	},
	"license": "MIT",
	"dependencies": {
		"@actions/core": "1.11.1",
		"@actions/tool-cache": "2.0.2",
		"@octokit/auth-action": "6.0.2",
		"@octokit/request-error": "7.1.0",
		"@octokit/rest": "22.0.1",
		"semver": "7.7.4",
		"ts-dedent": "2.2.0",
		"yaml": "2.8.2"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@octokit/types": "16.0.0",
		"@types/bun": "1.3.9",
		"@types/semver": "7.7.1",
		"lefthook": "1.13.6",
		"typescript": "5.9.3"
	},
	"packageManager": "bun@1.1.4",
	"trustedDependencies": ["@biomejs/biome", "lefthook"]
}
